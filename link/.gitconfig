[user]
	name = Joe Beda
	email = joe.github@bedafamily.com
[credential]
	helper = cache --timeout=3600
[color]
	ui = true
	interactive = auto
	filemode = false
	diff = auto
	status = auto
	branch = auto
	pager = true

[apply]
  whitespace = fix

[alias]
  br = branch
  ci = commit
  co = checkout
  df = diff
  g = grep -I
  lg = log -p
  pp = !"echo 'Pull'; git pull; echo 'Push'; git push"
  rb = rbranch
  rv = review
  st = status

[core]
  autocrlf = input
  whitespace = space-before-tab,trailing-space,tabwidth=4
  excludesfile = ~/.gitignore

[push]
	default = upstream

[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[merge]
  log = true

[rerere]
  enabled = 1

[include]
	path = ~/.gitconfig.platform
